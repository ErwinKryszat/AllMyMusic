<Window x:Class="AllMyMusic.frmCoverImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FrmCoverImage" 
        Height="900" 
        Width="640" 
        Loaded="Window_Loaded" 
       
        Icon="/AllMyMusic;component/Resources/Icons/AllMyMusic.ico" Closing="Window_Closing_1">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/NoChromeButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Button Style="{StaticResource NoChromeButtonStyle}" Click="Button_Click">
            <Image x:Name="coverImage"/>
        </Button>
    </Grid>
    
</Window>
